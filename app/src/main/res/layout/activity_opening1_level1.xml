<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0e17d"
    android:orientation="horizontal"
    tools:context="com.dummies.ecoscoutgame.Opening1Level1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/ekoOpening"
            android:layout_width="130dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ekomenyapaversitablet2" />

        <TextView
            android:id="@+id/textHallo"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_above="@id/ekoOpening"
            android:textColor="@color/colorWarnaHuruf"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Hi, friends! Let's be an EcoScout by taking care of our places. See the place around you." />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
