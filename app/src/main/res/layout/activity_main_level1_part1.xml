<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bglevel1tablet"
    tools:context="com.dummies.ecoscoutgame.MainLevel1Part1Activity">

    <RelativeLayout
        android:id="@+id/view_relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/tombolBeranda"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            app:srcCompat="@mipmap/tombolberanda8" />

        <TextView
            android:id="@+id/scoreCounter"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tombolBeranda"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="Score :   0 "
            android:textAlignment="gravity"
            android:textColor="@color/colorWarnaHuruf"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/tombolBeranda"
            android:layout_toRightOf="@id/tombolBeranda"
            android:text="Time : 60 "
            android:textAlignment="gravity"
            android:textColor="@color/colorWarnaHuruf"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pusatlevel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" />

        <TextView
            android:id="@+id/pusatlevel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pusatlevel1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text=" " />


        <LinearLayout
            android:id="@+id/layoutTongSampahHijau"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/layoutTongSampahBiru"
            android:layout_toLeftOf="@id/layoutTongSampahBiru"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tongSampahHijau"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                app:srcCompat="@mipmap/tongsampahhijautablet2"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTongSampahBiru"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/layoutTongSampahKuning"
            android:layout_toLeftOf="@id/layoutTongSampahKuning"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tongSampahBiru"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                app:srcCompat="@mipmap/tongsampahbirutablet2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTongSampahKuning"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/layoutTongSampahMerah"
            android:layout_toLeftOf="@id/layoutTongSampahMerah"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tongSampahKuning"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                app:srcCompat="@mipmap/tongsampahkuningtablet2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTongSampahMerah"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_below="@+id/pusatlevel1"
            android:layout_marginRight="90dp"
            android:layout_marginTop="70dp"
            android:layout_toLeftOf="@id/pusatlevel2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tongSampahMerah"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                app:srcCompat="@mipmap/tongsampahmerahtablet2" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/sampahHijau3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/pusatlevel2"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/pusatlevel2"
            android:background="@null"
            app:srcCompat="@mipmap/sampahapeltablet2" />

        <ImageButton
            android:id="@+id/sampahBiru1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pusatlevel2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/pusatlevel2"
            android:background="@null"
            app:srcCompat="@mipmap/sampahkorantablet2" />


        <ImageButton
            android:id="@+id/sampahKuning3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pusatlevel1"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/pusatlevel1"
            android:background="@null"
            app:srcCompat="@mipmap/sampahbotoltablet2" />

        <ImageButton
            android:id="@+id/sampahBiru2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/scoreCounter"
            android:layout_alignBottom="@+id/eko"
            android:background="@null"
            app:srcCompat="@mipmap/sampahbukutablet2" />

        <ImageButton
            android:id="@+id/sampahMerah2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layoutTongSampahMerah"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/scoreCounter"
            android:background="@null"
            app:srcCompat="@mipmap/sampahkalengkeduatablet2"
            />

        <ImageButton
            android:id="@+id/sampahKuning2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutKosong3"
            android:layout_toRightOf="@+id/eko"
            android:background="@null"
            app:srcCompat="@mipmap/sampahsnackkeduatablet2" />

        <ImageButton
            android:id="@+id/sampahHijau2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pusatlevel1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/pusatlevel1"
            android:background="@null"
            app:srcCompat="@mipmap/sampahpisangtablet2" />

        <ImageView
            android:id="@+id/sampahKuning1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutTongSampahHijau"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tombolBeranda"
            android:layout_toRightOf="@+id/tombolBeranda"
            app:srcCompat="@mipmap/sampahsnacktablet2" />

        <ImageButton
            android:id="@+id/sampahHijau1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/layoutKosong2"
            android:layout_toRightOf="@id/layoutTongSampahKuning"
            android:background="@null"
            app:srcCompat="@mipmap/sampahpisangtablet2" />

        <ImageButton
            android:id="@+id/sampahMerah1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/timer"
            android:layout_below="@id/layoutTongSampahMerah"
            android:background="@null"
            app:srcCompat="@mipmap/sampahkalengtablet2" />



        <LinearLayout
            android:id="@+id/layoutKosong1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/layoutTongSampahMerah"
            android:layout_below="@+id/layoutTongSampahHijau"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutKosong2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/scoreCounter"
            android:layout_alignTop="@id/layoutKosong1"
            android:layout_toRightOf="@id/layoutKosong1"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/layoutKosong3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layoutKosong1"
            android:layout_alignBottom="@id/layoutTongSampahMerah"
            android:layout_alignRight="@id/scoreCounter"
            android:layout_alignTop="@id/layoutTongSampahMerah"
            android:layout_toRightOf="@id/layoutKosong1"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/eko"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_above="@id/layoutKosong3"
            android:layout_alignLeft="@id/pusatlevel2"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ekoutamaversitablet3" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
